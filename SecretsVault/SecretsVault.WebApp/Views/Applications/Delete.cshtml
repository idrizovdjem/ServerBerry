@using SecretsVault.ViewModels.Application
@model DeletePhraseViewModel 

@{ 
    ViewData["Title"] = "Delete application";
}

<main class="container">
    <form class="col-4 offset-4" asp-controller="Applications" asp-action="Delete" method="post">
        <div>
            Deleting an application is <b>permanent</b> change and <b>cannot be undone</b>! When deleting an appplication you <b>also delete all secrets</b>!
        </div>

        <div class="mt-3">
            If you are sure you want to delete this application, please enter this bolded phrase <b class="text-danger">@($"{Model.CreatorEmail}/{Model.ApplicationName}")</b> down below.
        </div>

        <div class="form-group mt-3">
            <input class="form-control" name="DeletePhrase" placeholder="Delete phrase" id="phraseInput" />
        </div>

        <input type="hidden" name="ApplicationId" value="@Model.ApplicationId" />

        <button class="btn btn-danger w-100" id="deleteButton">Delete</button>
    </form>
</main>

@section Scripts {
    <script src="~/js/Applications/Delete.js" creatorEmail="@Model.CreatorEmail" applicationName="@Model.ApplicationName"></script>
}